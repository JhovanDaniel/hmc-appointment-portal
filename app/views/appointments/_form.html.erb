<div class="col-10">
    <%= render 'shared/errors', obj: @appointment %>
</div>

<%= form_with(model: @appointment, local: true) do |f| %>
        
            <div class="form-group">
                <%= f.label 'Location' %>
                <%= f.collection_select :location_id, Location.order(:name), :id, :name, style: 'display: block;'%>
            </div>
    
            <div class="form-group">
                <%= f.label :appointment_time %>
                <div class="col-6">
                    <%= f.datetime_local_field  :appointment_time, class:"form-control shadow rounded", placeholder: "Appointment"  %> 
                </div>
            </div>
            <div class="form-group">
                <%= f.label :first_name %>
                <div class="col-6">
                    <%= f.text_field :first_name, class:"form-control shadow rounded", placeholder: "First name is as it appears on your passport"  %> 
                </div>
            </div>
            <div class="form-group">
                <%= f.label :last_name %>
                <div class="col-6">
                    <%= f.text_field :last_name, class:"form-control shadow rounded", placeholder: "Last name is as it appears on your passport"  %> 
                </div>
            </div>
            <div class="form-group">
                <%= f.label :date_of_birth %>
                <div class="col-6">
                    <%= f.date_field :date_of_birth, class:"form-control shadow rounded", placeholder: ""  %> 
                </div>
            </div>
            <div class="form-group">
                <%= f.label :gender %>
                <div class="col-6">
                    <%= f.radio_button :gender, "Male" %>
                    <%= f.label :gender, "Male" %>
                    <%= f.radio_button :gender, "Female" %>
                    <%= f.label :gender, "Female" %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :phone %>
                <div class="col-6">
                    <%= f.text_field :phone, class:"form-control shadow rounded", placeholder: "No spaces required"  %> 
                </div>
            </div>
            <div class="form-group">
                <%= f.label :email %>
                <div class="col-6">
                    <%= f.text_field :email, class:"form-control shadow rounded", placeholder: "Example@example.com"  %> 
                </div>
            </div>
            <div class="my-4">
                <hr>
            </div>
            
            <p class="lead">Payment Details</p><br>
            <div class="row col-10 mb-4">
                <div class="form-group col-md-4">
                    <%= f.label "Card Number", data: {stripe: 'label'} %>
                    <%= f.text_field ' ', class: "form-control"%>
                </div>
                <div class="form-group col-md-2">
                    <%= f.label "Card CVV", data: {stripe: 'label'} %>
                    <%= f.text_field ' ', class: "form-control" %>
                </div>
                <div class="form-group col-md-6">
                    <div class="col-md-4">
                        <%= f.label "Card Expires", data: {stripe: 'label'} %>
                        <%= f.text_field ' ',
                            class:"form-control", 
                            data: {stripe: "exp-year"}%>
                    </div>
                </div>
                </div>
                
                <div class="form-group row text-center">
                    <%= f.submit class:"btn blue-button mb-4" %>
                </div>
            <% end %>
    
                
           