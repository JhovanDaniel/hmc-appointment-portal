<h1 class="mt-4"> All Users </h1><br/>
<div class="table-responsive">    
  <table class="table table-striped mt-4 mb-4">
      <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Location</th>
            <th>Access Level</th>
            <th colspan="3">Actions</th>
        </tr>
      </thead>
        <tbody>
            <% @users.each do |user| %>
            <tr>
                <td> <%= user.first_name %> </td>
                <td> <%= user.last_name %> </td>
                <td> <%= user.email %></td>
                <td><%= user.location.name %></td>
                <td><%= user.access_level %></td>
                
                <td><%= link_to "View", user_path(user), class:"btn btn-primary btn-sm" %></td>
                <td><%= link_to 'Edit', edit_user_path(user), class:"btn btn-primary btn-sm" %></td>
                
            </tr>
            <% end %>
        </tbody>
    </table>
  </div><br>
      
  <div class="mb-4">
    <span><%= link_to 'New User', new_user_path, class:"btn btn-primary btn-sm" %>  <%= link_to 'Back to Home', root_path, class:"btn btn-primary btn-sm" %></span>
  </div>
