<div class="col-10">
    <%= render 'shared/errors', obj: @user %>
</div>

<%= form_with(model: @user, local: true) do |f| %>
        
    <div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: 'email', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: 'email', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control' %>

    <small class="form-text text-muted"><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></small>
  </div>
  
  <div class="form-group">
      <%= f.label 'Location' %>
      <%= f.collection_select :location_id, Location.order(:name), :id, :name, style: 'display: block;'%>
  </div>

  <div class="form-group col-6">
    <%= f.label :access_level %>
    <%= f.select :access_level, ['Admin', 'Doctor', 'Lab', 'Nurse', 'Hotel', 'Viewer'], style: 'display: block;'%>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>