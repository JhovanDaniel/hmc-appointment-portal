<div class="col-10">
    <%= render 'shared/errors', obj: @location %>
</div>

<%= form_with(model: @location, local: true) do |f| %>
        
    <div class="form-group">
        <%= f.label :name %>
        <div class="col-6">
            <%= f.text_field :name, class:"form-control shadow rounded"  %> 
        </div>
    </div>
    <div class="form-group">
        <%= f.label :location %>
        <div class="col-6">
            <%= f.text_field :location, class:"form-control shadow rounded"  %> 
        </div>
    </div>
    <div class="form-group">
        <%= f.label :email %>
        <div class="col-6">
            <%= f.text_field :email, class:"form-control shadow rounded" %> 
        </div>
    </div><br>
        
    <div class="form-group row text-center col-6">
        <%= f.submit class:"btn blue-button mb-4" %>
    </div>
<% end %>
        

           