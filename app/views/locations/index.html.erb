
<!-- Table start -->
 <div class="table-responsive">
   <table class="table table-striped mt-4 mb-4">
      <thead>
        <tr>
          <th>Location ID</th>
          <th>Name</th>
          <th>Address</th>
          <th>Email</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>
        <tbody>
            <% @locations.each do |location| %>
            <tr>
              <td> <%= location.id %> </td>
              <td> <%= location.name %> </td>
              <td> <%= location.location %></td>
              <td> <%= location.email %></td>
              <td><%= link_to "View", location_path(location), class:"btn btn-primary btn-sm" %></td>
              <td><%= link_to 'Edit', edit_location_path(location), class:"btn btn-primary btn-sm" %></td>

              <td><%= link_to 'Delete', location_path(location), class:"btn btn-danger btn-sm", method: :delete, data: { confirm: "Are you sure?" } %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
  </div><br>
  
<div class="mb-4">
  <span><%= link_to 'New Location', new_location_path, class:"btn btn-primary btn-sm" %>  <%= link_to 'Back to Home', root_path, class:"btn btn-primary btn-sm" %></span>
</div>